<Window x:Class="WpfAppDemoCPCBhathi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDemoCPCBhathi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Background="Coral">
            <Button x:Name="loginbtn" Content="log in" HorizontalAlignment="Center" Margin="0,244,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.202,3.208"/>
            <TextBox x:Name="userid" HorizontalAlignment="Center" Margin="0,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Cursor="Hand" UndoLimit="90" AutomationProperties.ItemType="" AutomationProperties.Name="lbluserID" TextChanged="userID_TextChanged"/>
            <Label x:Name="lbl1" Content="Enter your ID here  " HorizontalAlignment="Left" Margin="336,137,0,0" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="lbl2" Content="Enter your passward here" HorizontalAlignment="Left" Margin="336,186,0,0" VerticalAlignment="Top" Width="152"/>
            <PasswordBox x:Name="userpw" HorizontalAlignment="Center" Margin="0,212,0,0" VerticalAlignment="Top" Width="120"/>
        </Grid>
    </Grid>
</Window>
