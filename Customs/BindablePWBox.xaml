<UserControl x:Class="WpfAppDemoCPCBhathi.Customs.BindablePWBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppDemoCPCBhathi.Customs"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <Grid>
        <PasswordBox x:Name="userPassWord"
                                 FontSize="15"
                                 Foreground="White"
                                 FontFamily="Yu Gothic UI Semibold"
                                 CaretBrush="LightPink"
                                 BorderBrush="LightGray"
                                 BorderThickness="0,0,0,1"
                               
                                 VerticalAlignment="Center"
                                 
                                 Padding="30,0,0,0">

            <PasswordBox.Background>
                <ImageBrush ImageSource="/WpfAppDemoCPCBhathi;component/images/password.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
            </PasswordBox.Background>

        </PasswordBox>

    </Grid>
</UserControl>
